@section Scripts
{
    <!-- 1. Подключаем наш ОБЩИЙ скрипт -->
    <script src="~/js/admin-crud-table.js"></script>

    <!-- 2. Вызываем его с параметрами для "Авторов" -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            App.initializeCrudTable({
                containerId: 'products-container',
                apiEndpoint: '/api/admin-tag',
                entityTitle: 'Теги'
            });
        });
    </script>
}